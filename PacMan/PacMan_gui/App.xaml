             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             StartupUri="View/MainWindow.xaml">
    <Application.Resources>
        <system:String x:Key="ApplicationTitle">PacMan</system:String>
        <system:String x:Key="ApplicationLable">My PacMan</system:String>
        <system:String x:Key="LevelCanvasName">GameCanvas</system:String>
        
        <Style x:Key="MainWindowButtoStylen" TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="24"/>
        </Style>
        
    </Application.Resources>
