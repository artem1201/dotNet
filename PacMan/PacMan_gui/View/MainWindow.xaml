<Window x:Class="PacMan_gui.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{StaticResource ApplicationTitle}" Height="350" Width="525">
    <Window.Background>Gainsboro</Window.Background>
    <Grid>
        <Label HorizontalAlignment="Center" FontSize="32" Content="{StaticResource ApplicationLable}" />
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10" >
            <Button>Play</Button>
            <Border Margin="5"></Border>
            <Button>Champions</Button>
            <Border Margin="5"></Border>
            <Button>Settings</Button>
            <Border Margin="5"></Border>
            <Button>About</Button>
            <Border Margin="5"></Border>
            <Button Name="BtnExit"  Click="BtnExit_OnClick" >Exit</Button>
            
        </StackPanel>
    </Grid>
</Window>
